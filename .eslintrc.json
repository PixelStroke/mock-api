{
    "settings": {
        "import/resolver": {
            "node": {
                "paths": ["src"],
                "extensions": [".js",".ts"],
                "moduleDirectory": ["node_modules"]
            }
        }
    },
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "eslint-config-prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "eslint-plugin-prettier"
    ],
    "rules": {
        "class-methods-use-this": "off",
        "import/extensions": "off",
        "linebreak-style": ["error", "unix"],
        "prettier/prettier": "error"
    }
}
